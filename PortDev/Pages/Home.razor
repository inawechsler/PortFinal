        </div>
    </div>
    <div class="trabajos-container">
        @foreach (var trabajo in otrosTrabajos)
        {
            <div class="trabajo-stripe">
                <!-- Contenido del trabajo (texto arriba) -->
                <div class="trabajo-contenido mb-4">
                    <h3 class="trabajo-titulo">@trabajo.Titulo</h3>

                    <p class="trabajo-descripcion">
                        @(idiomaActual == "es" ? trabajo.Descripcion : trabajo.DescripcionEn)
                    </p>
                </div>

                @if (trabajo != null)
                {
                    @if (trabajo.Tipo == TypeProject.Gallery)
                    {
                        <CarruselDeArmas TrabajoSeleccionado="trabajo" idiomaActual="idiomaActual" />
                    }
                    else
                    {
                        <TextCard TrabajoSeleccionado="trabajo" idiomaActual="idiomaActual" />
                    }
                }
            </div>
        }
    </div>
</div>




<!--Juegos en tarjetas de proyectos-->
@if (proyectoSeleccionado != null)
{
    <div class="modal fade show" style="display: block;" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title">@proyectoSeleccionado.Titulo</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CerrarDetalle"></button>
                </div>
                <!-- Video de Gameplay -->
                @if (!string.IsNullOrEmpty(proyectoSeleccionado.VideoUrl))
                {
                    <div class="ratio ratio-16x9 mb-4">
                        <iframe src="@proyectoSeleccionado.VideoUrl"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen>
                        </iframe>
                    </div>
                }

                <!-- Galería de Imágenes -->
                @if (proyectoSeleccionado.ImagenesUrl != null && proyectoSeleccionado.ImagenesUrl.Length > 0)
                {
                    <div class="image-gallery mb-4">
                        <div class="row g-3">
                            @foreach (var imagen in proyectoSeleccionado.ImagenesUrl)
                            {
                                <div class="col-md-4">
                                    <img src="@imagen"
                                         class="img-fluid rounded gallery-img"
                                         alt="@Traducir("screenshot_alt")"
                                         @onclick="() => MostrarImagenCompleta(imagen)">
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Tecnologías -->
                <div class="project-description mb-4">
                    <p>@(idiomaActual == "es" ? proyectoSeleccionado.Descripcion : proyectoSeleccionado.DescripcionEn)</p>
                </div>

                <div class="contribution-section mb-4">
                    <h6 class="text-accent-blue mb-2">@Traducir("contribucion")</h6>
                    <p class="contribution-text">@(idiomaActual == "es" ? proyectoSeleccionado.Contribucion : proyectoSeleccionado.ContribucionEn)</p>
                </div>
                <div class="d-flex flex-wrap gap-2 mt-3 mb-4">
                    <h6 class="text-accent-blue me-2">@Traducir("tecnologias"): </h6>
                    @foreach (var tecnologia in proyectoSeleccionado.Tecnologias)
                    {
                        <span class="badge bg-info">@tecnologia</span>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>

    @if (!string.IsNullOrEmpty(imagenSeleccionada))
    {
        <div class="modal fade show" style="display: block; z-index: 1060;" @onclick="CerrarImagenCompleta">
            <div class="modal-dialog modal-xl modal-dialog-centered">
                <div class="modal-content bg-transparent border-0">
                    <img src="@imagenSeleccionada" class="img-fluid" alt="@Traducir("imagen_completa_alt")">
                </div>
            </div>
        </div>
        <div class="modal-backdrop fade show" style="z-index: 1055;"></div>
    }
}
