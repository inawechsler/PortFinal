@using PortDev.Models
<!-- Versión resumida para Bloodborne -->
<div class="analisis-resumen">
    <!-- Miro Embed -->
    <div class="miro-info mb-3">
        <div class="d-flex align-items-center justify-content-between">

            <div class="tecnologias-tags">
                <div class="tecnologias-tags">
                    @for (int i = 0; i < TrabajoSeleccionado.Tecnologías.Length; i++)
                    {
                        <span class="tecnologia-tag">
                            @(idiomaActual == "es"
                                ? TrabajoSeleccionado.Tecnologías[i]
                                : TrabajoSeleccionado.TecnologíasEn[i])
                        </span>
                    }
                </div>
            </div>
            <a href="https://miro.com/app/board/uXjVK8AEQyE=/?share_link_id=54020073384"
               target="_blank"
               class="btn btn-miro">
                <i class="bi bi-box-arrow-up-right me-1"></i>Abrir en Miro
            </a>
        </div>
        <div class="miro-embed-container">
            <iframe src="https://miro.com/app/board/uXjVK8AEQyE=/?share_link_id=54020073384"
                    frameborder="0"
                    scrolling="no"
                    allowfullscreen
                    class="miro-frame"></iframe>
        </div>

        <div class="miro-footer mt-3">
            <div class="d-flex justify-content-between align-items-center">
            </div>
        </div>
    </div>

</div>



@code
{
    [Parameter] public OtroTrabajo? TrabajoSeleccionado { get; set; }
    [Parameter] public string? idiomaActual { get; set; }
}
<!-- Agregar estos estilos a los existentes -->
<style>
    /* Estilos para el resumen del análisis */
    .analisis-resumen {
        background: rgba(10, 11, 20, 0.7);
        border: 1px solid var(--accent-blue);
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 3rem;
        box-shadow: var(--neon-shadow);
    }

    .imagen-analisis {
        overflow: hidden;
        border-radius: 4px;
        border: 1px solid var(--accent-blue);
        height: 200px;
        transition: all 0.3s ease;
    }

        .imagen-analisis img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .imagen-analisis:hover {
            border-color: var(--accent-cyan);
            box-shadow: 0 0 15px var(--accent-blue);
        }

            .imagen-analisis:hover img {
                transform: scale(1.05);
            }

    /* Estilos para el contenedor de Miro */
    .miro-container {
        background: rgba(15, 17, 32, 0.8);
        border: 1px solid var(--accent-blue);
        border-radius: 6px;
        padding: 1.5rem;
        margin-top: 2rem;
        position: relative;
        overflow: hidden;
    }

        .miro-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, var(--accent-blue), #FFD02F, var(--accent-blue));
            opacity: 0.7;
        }

    .miro-title {
        color: var(--accent-cyan);
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    .miro-description {
        color: var(--text-bone);
        font-size: 0.95rem;
        opacity: 0.9;
    }

    .miro-embed-container {
        position: relative;
        width: 100%;
        height: 0;
        padding-bottom: 56.25%;
        border: 1px solid rgba(102, 102, 255, 0.3);
        border-radius: 4px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .miro-embed-container:hover {
            border-color: var(--accent-blue);
            box-shadow: 0 0 15px rgba(0, 255, 255, 0.3);
        }

    .miro-frame {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .btn-miro {
        background: transparent;
        border: 1px solid #FFD02F;
        color: #FFD02F;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        transition: all 0.3s ease;
        margin-bottom: 1.3rem;
    }

        .btn-miro:hover {
            background: rgba(255, 208, 47, 0.2);
            box-shadow: 0 0 10px rgba(255, 208, 47, 0.5);
            color: white;
        }

    /* Estilos para las etiquetas de tecnologías */
    .tecnologias-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1.3rem;
    }

    .tecnologia-tag {
        background-color: rgba(0, 255, 255, 0.1);
        border: 1px solid var(--accent-blue);
        color: var(--accent-cyan);
        padding: 0.3rem 0.6rem;
        border-radius: 4px;
        font-size: 0.85rem;
        transition: all 0.3s ease;
    }

        .tecnologia-tag:hover {
            background-color: rgba(0, 255, 255, 0.2);
            transform: translateY(-2px);
            box-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
        }

</style>